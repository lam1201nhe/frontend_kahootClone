@model IEnumerable<BusinessObjects.Models.Question>

@{
    BusinessObjects.Models.Question question = (BusinessObjects.Models.Question)ViewData["Question"];
}
<style>
    ul.web-body__ul {
        max-height: 80vh;
        overflow-y: hidden;
        overflow-x: hidden;
    }

        ul.web-body__ul:hover {
            overflow-y: scroll;
        }

    li.web-body_quiz {
        list-style-type: none;
        max-width: 140px;
    }

    .nav-link-quiz {
        box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
        background-color: #fff;
        border-radius: 8px;
        border: 1px solid transparent;
        text-decoration: none;
        color: black;
        padding: 10px;
        width: fit-content;
        max-width: inherit;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        transition: all 0.3s ease;
    }

    .nav-link-quiz:hover {
            color: #EE7214;
            border: 1px solid #EE7214;
    }

    .grid-container {
        display: grid;
        grid-template-columns: auto auto;
        grid-template-rows: auto auto;
        padding: 10px;
        gap: 20px;
    }

    .grid-item {
        background-color: rgba(255, 255, 255, 0.8);
        /* border: 1px solid rgba(0, 0, 0, 0.8); */
        padding: 40px 30px;
        font-size: 20px;
        text-align: center;
        box-shadow: 0px 0px 5px 0px black;
        border: 1px solid transparent;
        transition: all 0.3s ease;
        /* outline-color: #EE7214; */
    }

    .grid-item:hover{
        border: 1px solid #EE7214;
    }

    .grid-blue {
        background-color: #187498;
    }

    .grid-yellow {
        background-color: #F9D923;
    }

    .grid-red {
        background-color: #EB5353;
    }

    .grid-green {
        background-color: #36AE7C;
    }

    textarea {
        resize: vertical;
    }

</style>
<div class="container-fluid">
    <div class="row">
        <div class="web-body__nav col-md-2">
            <form>
                <ul class="web-body__ul p-0">
                    <li> <button class="btn btn-outline-dark mb-3" asp-action="Create" asp-controller="Quiz">Create Quiz</button>  </li>
                    @{
                        int stt = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <li class="web-body_quiz">
                            <a href="./List?questionId=@item.QuestionId" class="nav-link nav-link-quiz mb-3">
                                Quiz @(stt++): <b>
                                    @item.QuestionContent
                                </b>
                            </a>
                        </li>
                    }
                    <li class="web-body_quiz">
                        <a href="" class="nav-link nav-link-quiz mb-3">
                            Quiz 1: <b>
                                Lorem ipsum dolor, sit amet consectetur adipisicing elit. Excepturi
                                sequi ab possimus magnam, minima ipsam! Numquam, dignissimos commodi! Iusto aliquam molestiae praesentium reprehenderit e
                                os quisquam quaerat atque quae amet facere?
                            </b>
                        </a>
                    </li>
                </ul>
            </form>
        </div>
        <div class="web-body__content col-md-10">
            <h1>@question?.QuestionContent</h1>
            <div class="grid-container">
                <textarea class="grid-item grid-blue"></textarea>
                <textarea class="grid-item grid-red"></textarea>
                <textarea class="grid-item grid-yellow"></textarea>
                <textarea class="grid-item grid-green"></textarea>
            </div>
            <div class="d-flex justify-content-between">
                <h3>Point: @question?.Point</h3>
                <p>Code: <b> @ViewData["PinCode"] </b></p>
            </div>
        </div>
    </div>
</div>